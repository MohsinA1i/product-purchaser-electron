{
  "name": "product-purchaser-electron",
  "description": "Bot to automatically make purchases on online stores",
  "version": "1.0.0",
  "repository": "https://github.com/MohsinA1i/product-purchaser-electron",
  "author": "MohsinA1i",
  "license": "SEE LICENSE IN <filename>",
  "main": "main/main.js",
  "homepage": "./",
  "dependencies": {
    "@aws-amplify/ui-react": "^0.2.24",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "antd": "^4.7.3",
    "aws-amplify": "^3.3.4",
    "cross-env": "^7.0.2",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.2.4",
    "frameless-titlebar": "^2.1.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.0",
    "web-vitals": "^0.2.4"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "wait-on": "^5.2.0"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "react-eject": "react-scripts eject",
    "release": "yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && electron-builder",
    "start": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "debug": "concurrently \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron --inspect=5858 .\""
  },
  "build": {
    "appId": "com.product-purchaser.app",
    "productName": "Product Purchaser",
    "copyright": "Copyright Â© 2020 Mohsin Ali",
    "extends": null,
    "files": [
      "node_modules/**/*",
      "main/**/*",
      "build/**/*"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
